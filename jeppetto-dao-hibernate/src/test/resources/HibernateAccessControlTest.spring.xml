<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">

    <!-- =================== DataSource =================== -->

    <bean id="dataSource" class="org.springframework.jdbc.datasource.SingleConnectionDataSource" destroy-method="closeConnection">
        <property name="driverClassName" value="${hibernateDAOTest.jdbc.driverClass}"/>
        <property name="url" value="${hibernateDAOTest.jdbc.url}"/>
        <property name="username" value="${hibernateDAOTest.jdbc.user}"/>
        <property name="password" value="${hibernateDAOTest.jdbc.password}"/>
        <property name="suppressClose" value="true"/>
    </bean>


    <!-- =================== LiquiBase =================== -->

    <bean id="liquibase" class="liquibase.integration.spring.SpringLiquibase">
        <property name="dataSource" ref="dataSource"/>
        <property name="changeLog" value="classpath:migrations/access-control-test.changelog.xml"/>
    </bean>


    <!-- =================== SessionFactory =================== -->

    <bean id="accessControlHelper" class="org.iternine.jeppetto.dao.hibernate.AccessControlHelper">
        <property name="sessionFactory" ref="sessionFactory"/>
    </bean>

    <bean id="accessControlContextProvider" class="org.iternine.jeppetto.dao.SettableAccessControlContextProvider"/>

    <bean id="sessionFactory" class="org.springframework.orm.hibernate4.LocalSessionFactoryBean" depends-on="liquibase">
        <property name="dataSource" ref="dataSource"/>
        <property name="mappingResources">
            <list>
                <value>hbm/HibernateAccessControlTest.hbm.xml</value>
                <value>AccessControlEntry.hbm.xml</value>
            </list>
        </property>
        <property name="hibernateProperties">
            <props>
                <prop key="hibernate.bytecode.use_reflection_optimizer">true</prop>
                <!--suppress SpringModelInspection -->
                <prop key="hibernate.dialect">${hibernateDAOTest.hibernate.dialect}</prop>
                <prop key="hibernate.show_sql">false</prop>
                <prop key="hibernate.format_sql">true</prop>
                <prop key="hibernate.hbm2ddl.auto">validate</prop>
            </props>
        </property>
        <property name="entityInterceptor">
            <bean class="org.iternine.jeppetto.dao.hibernate.AccessControlInterceptor" lazy-init="true">
                <property name="accessControlHelper" ref="accessControlHelper"/>
                <property name="accessControlContextProvider" ref="accessControlContextProvider"/>
            </bean>
        </property>
    </bean>

    <bean name="transactionManager" class="org.springframework.orm.hibernate4.HibernateTransactionManager">
        <property name="sessionFactory" ref="sessionFactory"/>
    </bean>


    <!-- =================== Data Access Objects =================== -->

    <bean id="defaultAccessObjectDAO" class="org.springframework.transaction.interceptor.TransactionProxyFactoryBean">
        <property name="proxyInterfaces">
            <list>
                <bean class="java.lang.Class" factory-method="forName">
                    <constructor-arg value="org.iternine.jeppetto.dao.test.accesscontrol.DefaultAccessObjectDAO"/>
                </bean>
            </list>
        </property>
        <property name="target">
            <bean class="org.iternine.jeppetto.dao.DAOBuilder" factory-method="buildDAO">
                <constructor-arg index="0" value="org.iternine.jeppetto.dao.test.accesscontrol.DefaultAccessObject"/>
                <constructor-arg index="1" value="org.iternine.jeppetto.dao.test.accesscontrol.DefaultAccessObjectDAO"/>
                <constructor-arg index="2" value="org.iternine.jeppetto.dao.hibernate.HibernateQueryModelDAO"/>
                <constructor-arg index="3">
                    <map>
                        <entry key="sessionFactory" value-ref="sessionFactory"/>
                        <entry key="accessControlHelper" value-ref="accessControlHelper"/>
                    </map>
                </constructor-arg>
                <constructor-arg index="4" ref="accessControlContextProvider"/>
            </bean>
        </property>
        <property name="transactionManager" ref="transactionManager"/>
        <property name="transactionAttributes">
            <props>
                <prop key="*">PROPAGATION_REQUIRED</prop>
            </props>
        </property>
    </bean>

    <bean id="identifiedCreatableObjectDAO" class="org.springframework.transaction.interceptor.TransactionProxyFactoryBean">
        <property name="proxyInterfaces">
            <list>
                <bean class="java.lang.Class" factory-method="forName">
                    <constructor-arg value="org.iternine.jeppetto.dao.test.accesscontrol.IdentifiedCreatableObjectDAO"/>
                </bean>
            </list>
        </property>
        <property name="target">
            <bean class="org.iternine.jeppetto.dao.DAOBuilder" factory-method="buildDAO">
                <constructor-arg index="0" value="org.iternine.jeppetto.dao.test.accesscontrol.IdentifiedCreatableObject"/>
                <constructor-arg index="1" value="org.iternine.jeppetto.dao.test.accesscontrol.IdentifiedCreatableObjectDAO"/>
                <constructor-arg index="2" value="org.iternine.jeppetto.dao.hibernate.HibernateQueryModelDAO"/>
                <constructor-arg index="3">
                    <map>
                        <entry key="sessionFactory" value-ref="sessionFactory"/>
                        <entry key="accessControlHelper" value-ref="accessControlHelper"/>
                    </map>
                </constructor-arg>
                <constructor-arg index="4" ref="accessControlContextProvider"/>
            </bean>
        </property>
        <property name="transactionManager" ref="transactionManager"/>
        <property name="transactionAttributes">
            <props>
                <prop key="*">PROPAGATION_REQUIRED</prop>
            </props>
        </property>
    </bean>

    <bean id="roleCreatableObjectDAO" class="org.springframework.transaction.interceptor.TransactionProxyFactoryBean">
        <property name="proxyInterfaces">
            <list>
                <bean class="java.lang.Class" factory-method="forName">
                    <constructor-arg value="org.iternine.jeppetto.dao.test.accesscontrol.RoleCreatableObjectDAO"/>
                </bean>
            </list>
        </property>
        <property name="target">
            <bean class="org.iternine.jeppetto.dao.DAOBuilder" factory-method="buildDAO">
                <constructor-arg index="0" value="org.iternine.jeppetto.dao.test.accesscontrol.RoleCreatableObject"/>
                <constructor-arg index="1" value="org.iternine.jeppetto.dao.test.accesscontrol.RoleCreatableObjectDAO"/>
                <constructor-arg index="2" value="org.iternine.jeppetto.dao.hibernate.HibernateQueryModelDAO"/>
                <constructor-arg index="3">
                    <map>
                        <entry key="sessionFactory" value-ref="sessionFactory"/>
                        <entry key="accessControlHelper" value-ref="accessControlHelper"/>
                    </map>
                </constructor-arg>
                <constructor-arg index="4" ref="accessControlContextProvider"/>
            </bean>
        </property>
        <property name="transactionManager" ref="transactionManager"/>
        <property name="transactionAttributes">
            <props>
                <prop key="*">PROPAGATION_REQUIRED</prop>
            </props>
        </property>
    </bean>

</beans>
